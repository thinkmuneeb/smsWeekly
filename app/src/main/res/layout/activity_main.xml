<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_grey">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect_shape"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textViewSelectedContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/buttonSettingsActivity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="SETTINGS"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i"
            android:visibility="invisible"/>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_shape"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/smsAlarmInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER SMS HERE:"/>

        <EditText
            android:id="@+id/smsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS MESSAGE. "/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonStopService"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="pause"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/buttonStartService"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SEND"
                android:layout_alignParentRight="true"   />

        </RelativeLayout>

    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="settings"
            android:visibility="invisible"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_shape"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messageFromDeveloper"
            android:textSize="20dp"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <Button
                android:id="@+id/buttonContact"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="CONTACT DEVELOPER"/>
            </RelativeLayout>
    </LinearLayout>

    </LinearLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>